rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Scan images - publicly readable for OpenAI Vision API
    // URLs contain unguessable tokens so this is safe
    match /users/{uid}/uploads/{scanId}/{filename} {
      allow read: if true;  // Public read for OpenAI Vision API
      allow write: if request.auth != null 
                   && request.resource.size < 10 * 1024 * 1024
                   && request.resource.contentType.matches('image/.*');
      allow delete: if request.auth != null && request.auth.uid == uid;
    }
    
    // Default rule for all other files - require authentication
    match /{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null 
                   && request.resource.size < 10 * 1024 * 1024
                   && request.resource.contentType.matches('image/.*');
    }
  }
}
