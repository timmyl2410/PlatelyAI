rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(uid) {
      return isAuthenticated() && request.auth.uid == uid;
    }
    
    // Users collection - users can only read/write their own document
    match /users/{userId} {
      allow read: if isOwner(userId);
      allow write: if isOwner(userId);
    }
    
    // Sessions collection - used for temporary upload sessions
    // Allow authenticated users to create and access sessions
    match /sessions/{sessionId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isAuthenticated();
      allow delete: if isAuthenticated();
    }
    
    // Recipe images collection - read by all authenticated users
    match /recipeImages/{imageId} {
      allow read: if isAuthenticated();
      allow write: if false; // Backend-only writes
    }
    
    // Scans collection - users can only access their own scans
    match /scans/{uid}/runs/{scanId} {
      allow read: if isOwner(uid);
      allow write: if isOwner(uid);
    }
    
    // Inventories collection - users can only access their own inventory
    match /inventories/{uid} {
      allow read: if isOwner(uid);
      allow write: if isOwner(uid);
      
      // Subcollection: inventory items
      match /items/{itemId} {
        allow read: if isOwner(uid);
        allow write: if isOwner(uid);
      }
    }
    
    // Meals collection - users can only access their own generated meals
    match /meals/{uid}/generated/{mealId} {
      allow read: if isOwner(uid);
      allow write: if isOwner(uid);
    }
    
    // User entitlements - read by owner, write only by admin
    match /userEntitlements/{uid} {
      allow read: if isOwner(uid);
      allow write: if false; // Admin-only writes via backend
    }
    
    // Deny all other collections by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
